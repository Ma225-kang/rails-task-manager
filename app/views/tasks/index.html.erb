<h1>Tasks#index</h1>
<p>Here is your list of tasks:</p>
<ul>
<% @tasks.each do |task| %>
  <li> <%= link_to task.title, task_path(task) %> <%= task.details %> </li>
  <% if task.completed %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="fas fa-circle-notch"></i>
   <% end %>
<% end %>
</ul>
